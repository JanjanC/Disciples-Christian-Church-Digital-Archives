<form id="add_dedication_form" class="container mt-2">
  <div class="container" style="padding-left: 20%; padding-right: 20%;">
    <div class="row d-flex justify-content-between">
      <div class="col-12"><h1 class="my-3"> Edit Service Attendance Form </h1></div>
      <div class="col-12 align-self-end"><p style="text-align:end; margin:0;"> <span style="color: red;">*</span> - required</p></div>
    </div>
    <hr style="margin-top: 0;">
      
    <div class="row" id="date-row">
       <label for="address">Date of Service </label>
      <div class="col-12 d-flex justify-content-between">
          <input type="date" id="date" name="date" class="form-control" max="9999-12-31">
          <span class="fa-stack fa-2x" id="delete-button">
            <i class="far fa-square fa-stack-2x" id="border-delete" ></i>
            <i class="far fa-trash-alt fa-stack-1x" id="delete-icon" ></i>
          </span>
        <p id="date_info_error" class="error_codes"> </p>
      </div>
    </div>
<button role="button" aria-label="Today" class="e-btn e-today e-flat e-primary e-css" id="edit-date-button">Edit Date</button>
<p id="error-date">Please choose a date</p>

    <legend>Attendees <span style="color: red;">*</span></legend>
    <p id="no-attendees-error"class="error_codes"></p>
    <hr>

    <div class="row">
      <div class="col-12 d-flex justify-content-between">
        <legend>Members</legend>
        <button id="add_member_button" class="plus-btn" type="button"><i style="width: 2.5em; height: 2.5em; color:black;" class="far fa-plus-square"></i></button>
      </div>
    </div>

    <div class="row" id="member_row">
      {{>attendee-member attendeesMembers}}
    </div>
    <p id="witness_gmother_info_error" class="error_codes"> </p>
    <div class="row">
      <div class="col-12 d-flex justify-content-between">
        <legend>Non-members</legend>
        <button class="plus-btn" id="add_non_member_button" type="button"><i style="width: 2.5em; height: 2.5em; color:black;" class="far fa-plus-square"></i></button>
      </div>
    </div>

    <div class="row" id="gfather_witness_row">
      {{>attendee-non-member attendeesNonMembers}}
    </div>
    <p id="witness_gfather_info_error" class="error_codes"> </p>
    <button id="create-attendance" type="button" class="btn btn-primary">Submit</button>
  </div>
</form>

<div class="modal fade" id="memberModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Member</h5>
        <button type="button" id="close_modal" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col">
            <div id="display_member_div" style="display:block">
              <label>Member</label>
              <select name="input_member" id="input_member">
                   {{>dropdown members}}
              </select>
            </div>
            <p id="witness_gmother_modal_info_error" class="error_codes"> </p>
            <p id="witness_gmother_modal_middle_error" class="error_codes"> </p>
            <p id="witness_gmother_modal_middle_len_error" class="error_codes"> </p>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" id="cancel_modal" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="add_member">Save changes</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="nonMemberModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" style="">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Non-member</h5>
        <button type="button" id="close_modal" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col">
            <fieldset class="form-group">
              <div class="div">
                <div class="row">
                  <div class="col-12">
                
                    <label for="nonmember_first_name">First Name</label>
                    <input type="text" id="non_member_first_name" name="nonmember_first_name" class="form-control" placeholder="First name">
                  </div>
                  <div class="col-12">
                    <label for="nonmember_mid_name">Middle Initial</label>
                    <input type="text" id="non_member_mid_name" name="nonmember_mid_name" class="form-control" placeholder="Middle name">
                  </div>
                  <div class="col-12">
                    <label for="nonmember_last_name">Last Name</label>
                    <input type="text" id="non_member_last_name" name="nonmember_last_name" class="form-control" placeholder="Last name">
                  </div>
                </div>
              </div>
            </fieldset>
            <p id="witness_gfather_modal_info_error" class="error_codes"> </p>
            <p id="witness_gfather_modal_middle_error" class="error_codes"> </p>
            <p id="witness_gfather_modal_middle_len_error" class="error_codes"> </p>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" id="cancel_modal" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="add_non_member">Save changes</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="exampleModalCenter" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Delete Attendance Record</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row">
            <p id="delete-modal-text"> </p>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button"  class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="delete-attendance-btn">Delete attendance</button>
      </div>
    </div>
  </div>
</div>


<div class="modal fade" id="redirectAddModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" >
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Date of Service Attendance</h5>
        <button type="button" id="close-symbol-edit" class="btn-close" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="modal-body-edit">
        <input type="date" id="edit-date" max="9999-12-31">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" id="close-edit-btn">Close</button>
        <button type="button" class="btn btn-primary" id="change-date-btn">Edit date</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="redirectEditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" >
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit attendance record</h5>
        <button type="button" id="close-edit-symbol" class="btn-close" aria-label="Close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body" id="modal-body-edit-redirect">
        <p id="no-attendance-text"> </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" id="close-edit-confirm-btn" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="add-new-date-btn">Add new record</button>
      </div>
    </div>
  </div>
</div>