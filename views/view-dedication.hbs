<style>
  @import url(/css/fonts.css);

  #header {
      font-family: JuliusSansPro;
  }
</style>

{{>navbar}}

<div id="dedication_info" style="display: none" data-dedication="{{dedication_id}}" data-couple="{{parents_id}}"></div>
  <div class="container" style="padding-left: 18%; padding-right: 10%;">
    <h1 class="my-3"> View Child Dedication Record </h1>
    <hr>
    <div class="row">
      <div class="col">
        <legend>Registry Number</legend>
        <p for='date_created'>{{dedication_id}}</p>
      </div>
      <div class="col">
        <legend>Date Created</legend>
        <p for='date_created'>{{dateView date}}</p>
      </div>
      <div class="col">
        <legend>Dedication Date</legend>
        <p for='dedication_date'>{{dateView dedication_date}}</p>
      </div>
    </div>
    <div class="row">
      <legend>Child Name</legend>
      <div class="col person_info" data-member="{{infant_member_id}}" data-person="{{infant_person_id}}">
        <u for="first_name">First Name</u>
        <p>{{infant_first_name}}</p>
        {{#if infant_member_id}}
          <a href="/member/{{infant_member_id}}"><button class="btn btn-secondary mb-4">Child's Member Profile</button></a>
        {{/if}}
      </div>
      <div class="col">
        <u for="mid_name">Middle Initial</u>
        <p>{{infant_middle_name}}</p>
      </div>
      <div class="col">
        <u for="last_name">Last Name</u>
        <p>{{infant_last_name}}</p>
      </div>
    </div>
    <hr>
    <div class="row">
      <legend>Guardian One</legend>
      <div class="col person_info" data-member="{{guardianOne_member_id}}" data-person={{guardianOne_person_id}}>
        <u for="first_name">First Name</u>
        <p>{{guardianOne_first_name}}</p>
        {{#if guardianOne_member_id}}
          <a href="/member/{{guardianOne_member_id}}"><button class="btn btn-secondary mb-4">Member Profile</button></a>
        {{/if}}
      </div>
      <div class="col">
        <u for="mid_name">Middle Initial</u>
        <p>{{guardianOne_mid_name}}</p>
      </div>
      <div class="col">
        <u for="last_name">Last Name</u>
        <p>{{guardianOne_last_name}}</p>
      </div>
    </div>
    <hr>
    <div class="row person_info" data-member="{{guardianTwo_member_id}}" data-person={{guardianTwo_person_id}}>
      <legend>Guardian Two</legend>
      <div class="col">
        <u for="first_name">First Name</u>
        {{#if (isUndefined guardianTwo_first_name)}}
          <p>N/A</p>
        {{else}}
          <p>{{guardianTwo_first_name}}</p>
          {{#if guardianTwo_member_id}}
          <a href="/member/{{guardianTwo_member_id}}"><button class="btn btn-secondary mb-4">Member Profile</button></a>
          {{/if}}
        {{/if}}
      </div>
      <div class="col">
        <u for="mid_name">Middle Initial</u>
        {{#if (isUndefined guardianTwo_mid_name)}}
          <p>N/A</p>
        {{else}}
          <p>{{guardianTwo_mid_name}}</p>
        {{/if}}
      </div>
      <div class="col">
        <u for="last_name">Last Name</u>
        {{#if (isUndefined guardianTwo_last_name)}}
          <p>N/A</p>
        {{else}}
          <p>{{guardianTwo_last_name}}</p>
        {{/if}}
      </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-4">
            <u> Officiant </u>
            <p>{{officiant}}</p>
        </div>
        <div class="col-4">
            <u> Address of Dedication</u>
            <p>{{place}}</p>
        </div>
    </div>
    <hr>
    <div class="row">
      <legend>Sponsors (Male)</legend>
        {{#if witnessMale}}
          {{#each witnessMale}}
          {{>witness this}}
          {{/each}}
          <hr>
        {{else}}
          <p>N/A</p>
        {{/if}}

      <legend>Sponsors (Female)</legend>
        {{#if witnessFemale}}
          {{#each witnessFemale}}
          {{>witness this}}
          {{/each}}
        {{else}}
          <p>N/A</p>
        {{/if}}
    </div>
    <hr>
    {{#if canSee}}
    <div class="row my-3">
      <div class="col">
        <a href="/edit_dedication/{{dedication_id}}"><button class="btn btn-secondary mb-4">Edit Dedication Form</button></a>
        <button class="btn btn-danger mb-4" id="delete">Delete Dedication Form</button>
      </div>
    </div>
    {{/if}}

    {{>del-record-modal}}