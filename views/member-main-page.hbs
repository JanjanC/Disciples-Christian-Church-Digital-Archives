
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>
    {{>navbar}}
    <div class="container mt-4">
      <div class="row">
        <div class="col d-flex justify-content-between">
          <h1> {{#if fromSearch}}Search Results Members{{else}}Members{{/if}}</h1>
          <a href="/add_member"><i class="far fa-plus-square"></i></a>
        </div>
      </div>
      <div class="row">
        <div class="table-responsive" style="overflow-x:auto;">
        <table id="dataTable" class="display table responsive " style="width: 100%; overflow-x:auto;" cellspacing="0">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              {{#if canSee}}
              <th>Age</th>
              <th>Birth Date</th>
              <th>Contact Number</th>
              <th>Email Address</th>
              <th>Address</th>
              {{#if fromSearch}}<th>Date Created</th>{{/if}}
              {{/if}}
            </tr>
          </thead>
          <tbody>
            {{#if fromSearch}}
            {{#each members}}
            <tr data-href="/member/{{this.member_id}}">
              <td class="tb-data">{{this.member_id}}</td>
              <td class="tb-data">{{this.first_name}} {{this.last_name}}</td>
    
              {{#if ../canSee}}
              <td class="tb-data">{{this.age}}</td>
              <td class="tb-data">{{dateView this.birthday}}</td>
              <td class="tb-data">{{this.mobile}}</td>
              <td class="tb-data">{{this.email}}</td>
              <td class="tb-data">{{this.address}}</td>
              <td class="tb-data">{{dateView this.date_created}}</td>
              {{/if}}
            </tr>
            {{/each}}
            {{else}}
            {{#each members}}
            <tr data-href="/member/{{this.member_id}}">
              <td class="tb-data">{{this.member_id}}</td>
              <td class="tb-data">{{this.first_name}} {{this.last_name}}</td>
    
              {{#if ../canSee}}
              <td class="tb-data">{{this.age}}</td>
              <td class="tb-data">{{dateView this.birthday}}</td>
              <td class="tb-data">{{this.mobile}}</td>
              <td class="tb-data">{{this.email}}</td>
              <td class="tb-data">{{this.address}}</td>
              {{/if}}
            </tr>
            {{/each}}
            {{/if}}
          </tbody>
        </table>
        </div>
      </div>
    </div>
  </body>
</html>


