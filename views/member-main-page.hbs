<style>
  @import url(/css/fonts.css);

  #header {
      font-family: JuliusSansPro;
  }
</style>

{{>navbar}}

<div class="container mt-4">
  <div class="row">
    <div class="col d-flex justify-content-between">
      <h1> {{#if fromSearch}}Search Results Members{{else}}Members{{/if}}</h1>
      <a href="/add_member"><i class="far fa-plus-square"></i></a>
    </div>
  </div>
  <div class="row">
    <table id="dataTable" class="display table" width="100%">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          {{#if canSee}}
            <th>Age</th>
            <th>Birth Date</th>
            <th>Contact Number</th>
            <th>Email Address</th>
            <th>Address</th>
            {{#if fromSearch}}<th>Date Created</th>{{/if}}
          {{/if}}
        </tr>
      </thead>
      <tbody>
        {{#if fromSearch}}
          {{#each members}}
          <tr data-href="/member/{{this.member_id}}">
            <td>{{this.member_id}}</td>
            <td>{{this.first_name}} {{this.last_name}}</td>

            {{#if ../canSee}}
              <td>{{this.age}}</td>
              <td>{{dateView this.birthday}}</td>
              <td>{{this.mobile}}</td>
              <td>{{this.email}}</td>
              <td>{{this.address}}</td>
              <td>{{dateView this.date_created}}</td>
            {{/if}}
            </tr>
            {{/each}}
          {{else}}
            {{#each members}}
            <tr data-href="/member/{{this.member_id}}">
              <td>{{this.member_id}}</td>
              <td>{{this.first_name}} {{this.last_name}}</td>

              {{#if ../canSee}}
                <td>{{this.age}}</td>
                <td>{{dateView this.birthday}}</td>
                <td>{{this.mobile}}</td>
                <td>{{this.email}}</td>
                <td>{{this.address}}</td>
              {{/if}}
            </tr>
          {{/each}}
        {{/if}}
      </tbody>
    </table>
  </div>
</div>
