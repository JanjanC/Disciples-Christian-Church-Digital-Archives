        <p id="contract_info_error" class="error_codes"> </p>
      </div>
      <hr>
      <div class="row person_info" id="bride_info" data-member="{{bride_member_id}}" data-person="{{bride_person_id}}">
        <legend>Bride</legend>
        <div class="col">
          <u for="first_name_view">First Name</u>
          <p><span id="bride_first_name_view">{{bride_first_name}}</span></p>
        </div>
        <div class="col">
          <u for="mid_name_view">Middle Initial</u>
          <p><span id="bride_mid_name_view">{{bride_mid_name}}</span></p>
        </div>
        <div class="col">
          <u for="last_name_view">Last Name</u>
          <p><span id="bride_last_name_view">{{bride_last_name}}</span></p>
        </div>
        <div class="col d-flex justify-content-end">
