<style>
  @import url(/css/fonts.css);

  #header {
    font-family: JuliusSansPro;
  }

  .calendar-icon{
    color: rgb(90, 90, 90);
    font-size: 45px;
    position: relative;
    bottom:8px;
    margin-right:12px;
    cursor: pointer;
  }
  [type="date"]::- {
  background:#fff url(https://cdn1.iconfinder.com/data/icons/cc_mono_icon_set/blacks/16x16/calendar_2.png)  97% 50% no-repeat ;
  }
  input {
  border: 1px solid #c4c4c4;
  border-radius: 5px;
  background-color: #fff;
  padding: 3px 5px;
  box-shadow: inset 0 3px 6px rgba(0,0,0,0.1);
  width: 220px;
  }

  .modal-body{
    display: flex;
  justify-content: center;
  background-color: rgba(var(--bs-dark-rgb),var(--bs-bg-opacity))!important;
  }

  .modal{
     margin-top:3em !important;
  }
  
  }
</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{{>navbar}}

<div class="container mt-4">
  <div class="row">
    <div class="col d-flex justify-content-between">
      <h1>Service Attendance Record</h1>
      <div>
         <i class="fa lg fa-calendar-alt  calendar-icon " id="dp"></i>
         <a href="/add_attendance"><i class="far fa-plus-square"></i></a>
      </div>
      
    </div>
  </div>
  
  <div class="row">
    <h5 id="curr_date"></h5>
    <table id="dataTable" class="display table" width="100%">
      <thead>
        <tr>
          <th>Name</th>
          <th>Membership Status </th>
        </tr>
      </thead>
      <tbody>
        {{#each records}}
        <tr>
          
          <td>{{this.member_first_name}} {{this.member_last_name}}</td>
          <td class="membership-status">{{this.member_id}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">View service attendance</h5>
        <button type="button" id="close_modal" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <input type="date" id="date">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="view-date-btn">View date</button>
      </div>
    </div>
  </div>
</div>